<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">
    <ImageView
        android:id="@+id/pokemon"
        android:src="@drawable/ic_baseline_catching_pokemon_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"/>
    <ImageView
        android:id="@+id/smile"
        android:src="@drawable/ic_baseline_emoji_emotions_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/pokemon"/>
    <ImageView
        android:src="@drawable/ic_baseline_electric_meter_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/smile"/>

    <ImageView
        android:id="@+id/iv_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/profile_img1" />
    <TextView
        android:id="@+id/tv_name"
        android:text="이름"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv_profile"/>
    <TextView
        android:id="@+id/tv_msg"
        android:text="상태메시지"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_name"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/btn1"
            android:text="버튼1"
            android:backgroundTint="#673AB7"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <Button
            android:id="@+id/btn2"
            android:text="버튼2"
            android:backgroundTint="#673AB7"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <Button
            android:id="@+id/btn3"
            android:text="버튼3"
            android:backgroundTint="#673AB7"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    </LinearLayout>
</RelativeLayout>
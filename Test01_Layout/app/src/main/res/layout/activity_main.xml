                android:background="#FFEB3B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/plus_icon_back"
                    android:background="@drawable/img_color_back"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                </ImageView>

                <ImageView
                    android:id="@+id/plus_icon1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_baseline_message_24" />

                <ImageView
                    android:id="@+id/plus_icon2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/plus_icon1"
                    android:src="@drawable/ic_baseline_message_24" />
                <TextView
                    android:text="톡서랍 플러스 체험해보기"
                    android:layout_toRightOf="@+id/plus_icon2"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <!--pay-->
            <RelativeLayout
                android:background="#FFEB3B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/pay_icon"
                    android:src="@drawable/ic_baseline_message_24"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="pay"

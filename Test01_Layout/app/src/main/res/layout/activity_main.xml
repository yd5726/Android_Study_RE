            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--더보기-->
            <!--RelativeLayout 방향 <- 무조건 나옴-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/more_info"
                    android:layout_margin="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="더보기"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />
                <ImageView
                    android:id="@+id/search_icon"
                    android:src="@drawable/ic_baseline_search_24"
                    android:layout_centerInParent="true"
                    android:layout_margin="10dp"
                    android:layout_toLeftOf="@+id/scanner_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/scanner_icon"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@+id/setting_icon"
                    android:src="@drawable/ic_baseline_qr_code_scanner_24" />

                <ImageView
                    android:id="@+id/setting_icon"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_baseline_settings_24" />
            </RelativeLayout>
            <!--지갑-->
            <RelativeLayout
                android:background="#FFEB3B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/my_wallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="10dp"
                    android:textSize="16dp"
                    android:text="지갑"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toLeftOf="@+id/certification"
                    android:src="@drawable/ic_baseline_sentiment_satisfied_24" />

                <TextView
                    android:id="@+id/certification"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:text="인증서" />
            </RelativeLayout>
            <!--톡서랍 플러스 체험해보기-->
